Class file
using System;
using System.Data.SqlClient;

namespace EmployeeDataManagement
{
    internal class Class1
    {
        string connectionstring =
        "Data Source=Avanshikha\\SQLEXPRESS;Initial Catalog=CompanyDB;Integrated Security=True;";

        public Class1() { }
        public void insertdepartment(int id, string name, string location)
        {
            SqlConnection sqlConnection = new SqlConnection(connectionstring);

            try
            {
                string query =
                "INSERT INTO Departments VALUES(" + id + ",'" + name + "','" + location + "')";

                sqlConnection.Open();
                SqlCommand sqlcommand = new SqlCommand(query, sqlConnection);
                sqlcommand.ExecuteNonQuery();
                Console.WriteLine("Department inserted");
            }
            catch (Exception ex)
            {
                Console.WriteLine("Error: " + ex.Message);
            }
            finally
            {
                sqlConnection.Close();
            }
        }
        public void insertemployee(int id, string name, decimal salary, int departmentid)
        {
            SqlConnection sqlConnection = new SqlConnection(connectionstring);

            try
            {
                sqlConnection.Open();

                string check =
                "SELECT COUNT(*) FROM Departments WHERE DepartmentId=" + departmentid;

                SqlCommand checkCmd = new SqlCommand(check, sqlConnection);
                int deptcount = (int)checkCmd.ExecuteScalar();

                if (deptcount == 0)
                {
                    Console.WriteLine("Invalid Department Id");
                    return;
                }

                string query =
                "INSERT INTO Employees VALUES(" + id + ",'" + name + "'," + salary + "," + departmentid + ")";

                SqlCommand sqlcommand = new SqlCommand(query, sqlConnection);
                sqlcommand.ExecuteNonQuery();
                Console.WriteLine("Employee inserted");
            }
            catch (Exception ex)
            {
                Console.WriteLine("Error: " + ex.Message);
            }
            finally
            {
                sqlConnection.Close();
            }
        }

        public void viewdepartment()
        {
            SqlConnection sqlConnection = new SqlConnection(connectionstring);

            try
            {
                string query = "SELECT * FROM Departments";
                sqlConnection.Open();
                SqlCommand sqlcommand = new SqlCommand(query, sqlConnection);
                SqlDataReader reader = sqlcommand.ExecuteReader();

                while (reader.Read())
                {
                    Console.WriteLine($"{reader[0]} {reader[1]} {reader[2]}");
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine("Error: " + ex.Message);
            }
            finally
            {
                sqlConnection.Close();
            }
        }
        public void viewemployee()
        {
            SqlConnection sqlConnection = new SqlConnection(connectionstring);

            try
            {
                string query = "SELECT * FROM Employees";
                sqlConnection.Open();
                SqlCommand sqlcommand = new SqlCommand(query, sqlConnection);
                SqlDataReader reader = sqlcommand.ExecuteReader();

                while (reader.Read())
                {
                    Console.WriteLine($"{reader[0]} {reader[1]} {reader[2]} {reader[3]}");
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine("Error: " + ex.Message);
            }
            finally
            {
                sqlConnection.Close();
            }
        }

        public void viewempdepartment()
        {
            SqlConnection sqlConnection = new SqlConnection(connectionstring);
            try
            {
                string query =
                "SELECT e.EmployeeId,e.EmployeeName,e.EmployeeSalary,d.DepartmentName " +
                "FROM Employees e JOIN Departments d ON e.DepartmentId=d.DepartmentId";

                SqlCommand sqlcommand = new SqlCommand(query, sqlConnection);
                SqlDataReader reader = sqlcommand.ExecuteReader();

                while (reader.Read())
                {
                    Console.WriteLine($"{reader[0]} {reader[1]} {reader[2]} {reader[3]}");
            }
            catch (Exception ex)
            {
                Console.WriteLine("Error: " + ex.Message);
            }
            finally
                sqlConnection.Close();
            }
        }
        public void updatesalary(int empid, decimal salary)
        {

            try
            {
                string query =
                " WHERE EmployeeId=" + empid;

                sqlConnection.Open();
                SqlCommand sqlcommand = new SqlCommand(query, sqlConnection);
                Console.WriteLine("Salary updated");
            catch (Exception ex)
            {
                Console.WriteLine("Error: " + ex.Message);
            }
            finally
            {
                sqlConnection.Close();
            }
        }

        
        public void DeleteEmp(int empid)
        {

            try
            {
                string query =
                "DELETE FROM Employees WHERE EmployeeId=" + empid;

                sqlConnection.Open();
                sqlcommand.ExecuteNonQuery();
                Console.WriteLine("Employee deleted");
            }
            catch (Exception ex)
            {
                Console.WriteLine("Error: " + ex.Message);
            }
            finally
            {
                sqlConnection.Close();
            }
        }

        
        public void DeleteDep(int depid)
        {
            SqlConnection sqlConnection = new SqlConnection(connectionstring);

            try
            {
                string query =
                "DELETE FROM Departments WHERE DepartmentId=" + depid;

                sqlConnection.Open();
                SqlCommand sqlcommand = new SqlCommand(query, sqlConnection);
                sqlcommand.ExecuteNonQuery();
                Console.WriteLine("Department deleted");
            }
            catch (Exception ex)
            {
                Console.WriteLine("Error: " + ex.Message);
            }
            finally
            {
                sqlConnection.Close();
            }
        }
    }
}


Program.cs

